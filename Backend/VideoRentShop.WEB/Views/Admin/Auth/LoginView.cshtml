@using VideoRentShop.HttpModels.Requests.Identity
@model LoginRequest
@{
    Layout = "_ClearLayout";
    ViewData["Title"] = "Авторизация";
}
<!-- Sign In Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <form class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3" id="loginForm" onsubmit="return false">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Авторизация</h3>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingInput" placeholder="Admin" asp-for="Login">
                    <label for="floatingInput">Почта</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control" placeholder="admin" id="password-input" asp-for="Password">
                    <label for="floatingPassword">Пароль</label>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                    @* <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Запомнить меня</label>
                    </div>
                    <a href="">Forgot Password</a> *@
                </div>
                <button type="submit" class="btn btn-primary py-3 w-100 mb-4" id="loginBtn">Войти</button>
                @* <p class="text-center mb-0">Don't have an Account? <a href="">Sign Up</a></p> *@
            </form>
        </div>
    </div>
</div>
<!-- Sign In End -->
@section Scripts {
    <script>
        $('#loginBtn').on('click', function () {
            $.ajax({
                type: "POST",
                url: '/api/login',
                data: $('#loginForm').serialize(),
                success: function (response) {
                    window.location = "@Url.Action("Index", "AdminView")"
                    serverValidate.text = "";
                },
                error: function (response) {
                    console.log(response.responseJSON.message)
                    $('#serverValidate').html(response.responseJSON.message);
                }
            })
        })
    </script>
}